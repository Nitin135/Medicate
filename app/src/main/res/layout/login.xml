<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/NoAccountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LoginButton"
            android:layout_toStartOf="@+id/CreateAccount"
            android:text="Not Registered Yet? "
            android:textAlignment="center" />

        <TextView
            android:id="@+id/CreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/NoAccountLabel"
            android:layout_alignBottom="@+id/NoAccountLabel"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="58dp"
            android:onClick="register"
            android:text=" Register Now"
            android:textAlignment="center"
            android:textColor="#4455FF" />

        <Button
            android:id="@+id/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="56dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Log In"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_below="@+id/login_Password"
            android:layout_alignParentStart="true"
            />

        <EditText
            android:id="@+id/login_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/login_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_Password"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="34dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="text" />

        <TextView
            android:id="@+id/LoginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:text="Login"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
