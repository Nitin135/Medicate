<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/LoginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:text="Login"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="94dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_layout_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LoginLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="185dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/login_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:hint="Username"
                android:inputType="text"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="-11dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_layout_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/login_layout_Username"
            android:layout_below="@+id/login_layout_Username"
            android:layout_marginTop="15dp"
            app:passwordToggleEnabled="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="279dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/login_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/login_Password"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:hint="Password"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="296dp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/forget_password"
            android:layout_marginTop="37dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Log IN"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="378dp" />

        <Button
            android:id="@+id/RegisterButton"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LoginButton"
            android:layout_marginTop="31dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Create Account"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_layout_Password"
            android:layout_centerHorizontal="true"
            android:text="Forget Password?"
            android:textSize="18sp"
            tools:text="Forget Password?" />

    </RelativeLayout>

</RelativeLayout>
